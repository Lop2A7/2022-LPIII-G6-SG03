package lp3.pkg06.s2;
import java.util.*;

public class LP306S2 {

    public static void main(String[] args) {
        //ingresar los valores
        
        //DATOS DE FIDO
        System.out.println("Ingrese datos de FIDO");
        Scanner s1 = new Scanner(System.in);
        System.out.println("Ingrese el peso:");
        Double miPeso = s1.nextDouble();
        
        System.out.println("Ingrese la edad:");
        Integer miEdad = s1.nextInt();
        
        System.out.println("Ingrese la temperatura:");
        Double miTemperatura = s1.nextDouble();
        
        Perro Fido = new Perro("chihuahua","marr√≥n");
        Perro Pelusa = new Perro("pequines","blanco");
        
        Fido.increEdad(2);
        Pelusa.increEdad(5);
        
        Fido.setEdad(miEdad);
        Fido.peso = miPeso;
        Fido.setTemp(miTemperatura);
        
        Fido.Diagnostico();
        
    }
    
}
